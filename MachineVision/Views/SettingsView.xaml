<UserControl
    x:Class="MachineVision.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="500"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
        Margin="15"
        FontWeight="Bold"
        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
        Text="系统设置" />
        <StackPanel Grid.Row="1" Margin="15,0">
            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="相机类型" />
                <ComboBox
                Width="150"
                Margin="10,0"
                Padding="5"
                ItemsSource="{Binding CameraList}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                Text="{Binding Parameter.CameraType}" />
            </StackPanel>

            <StackPanel Margin="0,5" Orientation="Horizontal">
                <TextBlock
                Margin="0,10"
                VerticalAlignment="Center"
                Text="设备类型" />
                <ComboBox
                Width="150"
                Margin="10,0"
                Padding="5"
                ItemsSource="{Binding DeviceList}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                Text="{Binding Parameter.DeviceType}" />
            </StackPanel>
           
        </StackPanel>
        <StackPanel
        Grid.Row="2"
        Margin="10"
        HorizontalAlignment="Right"
        Orientation="Horizontal">
            <Button
            Width="100"
            Margin="10"
            Command="{Binding CancelCommand}"
            Content="关闭"
            Style="{StaticResource MaterialDesignOutlinedLightButton}" />
            <Button
            Width="100"
            Margin="10"
            Command="{Binding SaveCommand}"
            Content="保存" />
        </StackPanel>
    </Grid>
</UserControl>
